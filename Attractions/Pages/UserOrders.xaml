<Page x:Class="Attractions.Pages.UserOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Мои заказы"
      Background="#20331B">

    <Page.Resources>
        <Color x:Key="PrimaryColor">#A4B17B</Color>
        <Color x:Key="AccentColor">#697E50</Color>
        <Color x:Key="DarkColor">#20331B</Color>
        <SolidColorBrush x:Key="LightTextColor">#DDDDDD</SolidColorBrush>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
            <Setter Property="Margin" Value="0 5 0 0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FFA4B17B"/>
            <Setter Property="Foreground" Value="#20331B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="Transparent" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OrderCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#697E50"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <Style x:Key="OrderItemTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource LightTextColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="2 0"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Навигационная панель -->
        <Border Grid.Row="0" Background="#697E50" Padding="10" CornerRadius="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🏠 Главная" Click="BtnMain_Click" Width="120" Height="30"/>
                <Button Content="🛒 Корзина" Click="BtnCart_Click" Width="120"/>
                <Button Content="★ Избранное" Click="BtnFavorites_Click" Width="120"/>
                <Button Content="🗃 Мои заказы" Click="BtnUserOrders_Click" Width="120"/>
                <Button Content="👤 Аккаунт" Click="BtnAccount_Click" Width="120"/>
                <Button Content="Выйти" Click="BtnLogout_Click" Width="120" Background="#FF960226" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <StackPanel>
                <TextBlock Text="Мои заказы" 
                           FontSize="23" 
                           FontWeight="Bold" 
                           Foreground="#A4B17B"
                           Margin="0 0 0 15"/>

                <ItemsControl x:Name="OrdersItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource OrderCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding OrderDate, StringFormat='Заказ от {0:dd.MM.yyyy HH:mm}'}" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource LightTextColor}"
                                                   FontSize="16"/>

                                        <TextBlock Text="{Binding Statuses.Name, StringFormat='Статус: {0}'}" 
                                                   Style="{StaticResource OrderItemTextStyle}" 
                                                   Margin="0 3 0 8"/>

                                        <ItemsControl ItemsSource="{Binding OrderItems}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0 3">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="220"/>
                                                            <ColumnDefinition Width="130"/>
                                                            <ColumnDefinition Width="60"/>
                                                            <ColumnDefinition Width="80"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding EntertainmentName}" 
                                                                   Style="{StaticResource OrderItemTextStyle}"
                                                                   Grid.Column="0"/>
                                                        <TextBlock Text="{Binding ScheduleTime}" 
                                                                   Style="{StaticResource OrderItemTextStyle}" 
                                                                   Grid.Column="1"/>
                                                        <TextBlock Text="{Binding Quantity}" 
                                                                   Style="{StaticResource OrderItemTextStyle}" 
                                                                   Grid.Column="2" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Price, StringFormat='Цена:{0} ₽'}" 
                                                                   Style="{StaticResource OrderItemTextStyle}" 
                                                                   Grid.Column="3" HorizontalAlignment="Right"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock Text="{Binding TotalAmount, StringFormat='Общая сумма: {0}₽'}" 
                                                   FontWeight="Bold" 
                                                   Foreground="{StaticResource LightTextColor}" 
                                                   FontSize="15"
                                                   Margin="0 10 0 0"/>
                                    </StackPanel>


                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock x:Name="TxtNoOrders"
                           Text="У вас пока нет заказов."
                           HorizontalAlignment="Center"
                           FontSize="16"
                           Foreground="{StaticResource LightTextColor}"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>