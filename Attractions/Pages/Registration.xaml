<Page x:Class="Attractions.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Attractions.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Регистрация"
      Background="#FF2D2D30">

    <Grid>
        <Border Background="#FF3E3E42" CornerRadius="10" 
                Width="400" VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="25">
            <StackPanel>
                <TextBlock Text="Регистрация" 
                           Foreground="White" FontSize="24" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Имя -->
                <TextBlock Text="Имя" Foreground="White" Margin="0,0,0,10"/>
                <TextBox x:Name="tbFirstName" Foreground="Black" Margin="0,0,0,10"/>

                <!-- Фамилия -->
                <TextBlock Text="Фамилия" Foreground="White" Margin="0,0,0,10"/>
                <TextBox x:Name="tbLastName" Foreground="Black" Margin="0,0,0,10"/>

                <!-- Отчество -->
                <TextBlock Text="Отчество" Foreground="White" Margin="0,0,0,10"/>
                <TextBox x:Name="tbMiddleName" Foreground="Black" Margin="0,0,0,10"/>

                <!-- Дата рождения -->
                <TextBlock Text="Дата рождения" Foreground="White" Margin="0,0,0,10"/>
                <DatePicker x:Name="dpBirthDate" SelectedDateFormat="Short"
                            Foreground="Black" Margin="0,0,0,10"/>

                <!-- Email -->
                <TextBlock Text="Email" Foreground="White" Margin="0,0,0,10"/>
                <TextBox x:Name="tbEmail" Foreground="Black" Margin="0,0,0,10"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль" Foreground="White" Margin="0,0,0,10"/>
                <PasswordBox x:Name="pbPassword" Foreground="Black" Margin="0,0,0,10"/>

                <!-- Подтверждение пароля -->
                <TextBlock Text="Подтвердите пароль" Foreground="White" Margin="0,0,0,10"/>
                <PasswordBox x:Name="pbConfirmPassword" Foreground="Black" Margin="0,0,0,20"/>

                <!-- Показывать пароль -->
                <CheckBox x:Name="cbShowPassword" Content="Показать пароль" 
                          Foreground="White" Margin="0,0,0,20"
                          Checked="CbShowPassword_Checked" Unchecked="CbShowPassword_Unchecked"/>

                <!-- Кнопка 'Зарегистрироваться' -->
                <Button Content="Зарегистрироваться" Click="BtnRegister_Click"
                        Background="#FF0078D7" Foreground="White" 
                        FontWeight="Bold" Height="40" Margin="0,0,0,10" FontSize="15"/>

                <!-- Кнопка 'Назад' -->
                <Button Content="Назад" Click="BtnBack_Click"
                        Foreground="#FF0078D7" BorderBrush="#FF0078D7" FontWeight="Bold" FontSize="15"/>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="tbError" Foreground="Red" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"
                           TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>